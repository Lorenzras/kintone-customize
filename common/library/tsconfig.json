{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ESNEXT",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowJs": true,
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "baseUrl": "./types"
  },
  "include": ["./src/**/*", "./node_modules/@kintone/dts-gen/kintone.d.ts"],

  "rules": {
    "quotemark": [true, "single"]
  }
}
