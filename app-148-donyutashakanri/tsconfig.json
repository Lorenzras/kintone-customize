{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowJs": true,
    "lib": ["es5", "es6", "dom", "dom.iterable"]
  },
  "include": ["./src/**/*"],
  "rules": {
    "quotemark": [true, "single"]
  }
}
